<Window x:Class="PetShop.Views.ManagerView.ManagerMenu"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="Меню" Height="413" Width="535.6">

    <Grid Background="White"  Margin="0,0,2,4">
        <Button Content="Поставщики" Command="{Binding SupplierCommand}" HorizontalAlignment="Left" Margin="137,26,0,0" VerticalAlignment="Top" Width="234" RenderTransformOrigin="1.28,2.15" Height="61" FontSize="18"/>
        <Button Content="Товары" Command="{Binding GoodCommand}" HorizontalAlignment="Left" Margin="137,116,0,0" VerticalAlignment="Top" Width="234" Height="64" FontSize="18" />
        <Button Content="Акции" Command="{Binding ActionCommand}" HorizontalAlignment="Left" Margin="137,209,0,0" VerticalAlignment="Top" Width="234" Height="61" FontSize="18"/>
        <Button Content="Продажи" Command="{Binding CheckCommand}" HorizontalAlignment="Left" Margin="137,298,0,0" VerticalAlignment="Top" Width="234" Height="61" FontSize="18"/>

    </Grid>
</Window>
