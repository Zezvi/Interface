<Window x:Class="PetShop.Views.ManagerView.ManagerMenu"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="Меню" Height="254.701" Width="240.189">

    <Grid Background="GreenYellow"  Margin="0,0,2,4">
        <Button Content="Поставщики" Command="{Binding SupplierCommand}" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="212" RenderTransformOrigin="1.28,2.15"/>
        <Button Content="Товары" Command="{Binding GoodCommand}" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="212" />
        <Button Content="Акции" Command="{Binding ActionCommand}" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="212"/>
        <Button Content="Бонусные карты" Command="{Binding BonusCommand}"  HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="212"/>
        <Button Content="Продажи" Command="{Binding CheckCommand}" HorizontalAlignment="Left" Margin="10,169,0,0" VerticalAlignment="Top" Width="212"/>

    </Grid>
</Window>
