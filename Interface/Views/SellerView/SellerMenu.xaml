<Window x:Class="PetShop.Views.SellerView.SellerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="Меню" Height="413" Width="535.6">

    <Grid Background="White"  Margin="0,0,2.2,3.2">
        <Button Content="Оформление покупки" Command="{Binding PurchaseCommand}" HorizontalAlignment="Left" Margin="115,42,0,0" VerticalAlignment="Top"  Width="273" Height="75" FontSize="18"/>
        <Button Content="Продажи" Command="{Binding CheckCommand}" HorizontalAlignment="Left" Margin="115,150,0,0" VerticalAlignment="Top" Width="273" Height="75" FontSize="18"/>
        <Button Content="Бонусные карты" Command="{Binding BonusCommand}"  HorizontalAlignment="Left" Margin="115,259,0,0" VerticalAlignment="Top" Width="273" Height="72" FontSize="18"/>
    </Grid>
</Window>
