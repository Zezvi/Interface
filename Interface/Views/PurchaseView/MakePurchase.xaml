        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.Views.PurchaseView"
        mc:Ignorable="d"
        Title="MakePurchase" Height="450" Width="800">
    <Grid>
        <Label Content="Оформление заказа" HorizontalAlignment="Left" Margin="334,10,0,0" VerticalAlignment="Top" Width="171"/>
        <ListBox x:Name="lxOrder" Margin="63,98,280,148"/>
