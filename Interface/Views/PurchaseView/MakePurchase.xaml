        <TextBox x:Name="txtCardNumber" HorizontalAlignment="Left" Height="23" Margin="618,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83" TextChanged="txtCardNumber_TextChanged"/>
