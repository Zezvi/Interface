<Window x:Class="PetShop.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="Форма входа" Height="188" Width="276">
    <Grid Margin="0,10,2,2">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="22,18,0,0" VerticalAlignment="Top" Width="87" Height="28" RenderTransformOrigin="0.034,0.204"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="22,59,0,0" VerticalAlignment="Top" Width="87" Height="28" RenderTransformOrigin="0.034,0.204"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Margin="98,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="98,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnInput" Content="Ввод" HorizontalAlignment="Left" Margin="26,108,0,0" VerticalAlignment="Top" Height="25" Width="78" Click="btnInput_Click"/>
        <Button x:Name="btnClose" Content="Закрыть" HorizontalAlignment="Left" Margin="147,108,0,0" VerticalAlignment="Top" Height="25" Width="78" Click="btnClose_Click"/>

    </Grid>
</Window>
